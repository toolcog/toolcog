{
  "private": true,
  "name": "root",
  "type": "module",
  "scripts": {
    "dev": "turbo watch build",
    "build": "turbo run build",
    "test": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "toolcog-node": "turbo --filter=@toolcog/node/cli build && node packages/engines/node/cli/dist/bin.js",
    "toolcog": "turbo --filter=toolcog/cli build && node packages/toolcog/cli/dist/bin.js",
    "clean": "rimraf .turbo node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "catalog:build",
    "prettier": "catalog:build",
    "rimraf": "catalog:build",
    "turbo": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:build"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.5.0"
}
