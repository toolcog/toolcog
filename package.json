{
  "private": true,
  "name": "root",
  "type": "module",
  "scripts": {
    "dev": "turbo watch build",
    "build": "turbo run build",
    "test": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "toolcog-node": "turbo --filter=@toolcog/node/cli build && node packages/adapters/node/bin/toolcog-node.js",
    "toolcog": "turbo --filter=toolcog/cli build && node packages/toolcog/bin/toolcog.js",
    "clean": "pnpm run -r clean && rimraf .turbo node_modules/.cache",
    "clean-all": "pnpm run -r clean-all && rimraf .turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "catalog:build",
    "prettier": "catalog:build",
    "rimraf": "catalog:build",
    "turbo": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:build"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.6.0"
}
