{
  "name": "@toolcog/node",
  "version": "0.0.1",
  "description": "Toolcog Node.js adapter",
  "type": "module",
  "types": "./dist/lib.d.ts",
  "main": "./dist/lib.js",
  "bin": {
    "toolcog-node": "./cli/dist/bin.js"
  },
  "scripts": {
    "dev": "rollup --config --watch --no-watch.clearScreen",
    "build": "rollup --config",
    "check": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --check src/",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo dist",
    "prepack": "toolcog-config prepack",
    "postpack": "toolcog-config postpack"
  },
  "files": [
    "dist/",
    "loader/dist/",
    "silence/dist/",
    "cli/dist/"
  ],
  "sideEffects": false,
  "imports": {
    "#cli": {
      "types": "./cli/dist/lib.d.ts",
      "import": "./cli/dist/lib.js",
      "require": "./cli/dist/lib.cjs"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    },
    "./loader": {
      "types": "./loader/dist/lib.d.ts",
      "import": "./loader/dist/lib.js",
      "require": "./loader/dist/lib.cjs"
    },
    "./silence": {
      "types": "./silence/dist/lib.d.ts",
      "import": "./silence/dist/lib.js",
      "require": "./silence/dist/lib.cjs"
    },
    "./cli": {
      "types": "./cli/dist/lib.d.ts",
      "import": "./cli/dist/lib.js",
      "require": "./cli/dist/lib.cjs"
    },
    "./cli/bin": {
      "types": "./cli/dist/bin.d.ts",
      "import": "./cli/dist/bin.js",
      "require": "./cli/dist/bin.cjs"
    }
  },
  "peerDependencies": {
    "typescript": "^5.4"
  },
  "dependencies": {
    "@toolcog/core": "workspace:*",
    "@toolcog/runtime": "workspace:*",
    "@toolcog/loader": "workspace:*",
    "@toolcog/repl": "workspace:*",
    "commander": "^12.1"
  },
  "optionalDependencies": {
    "@toolcog/openai": "workspace:*"
  },
  "devDependencies": {
    "@toolcog/config": "workspace:*",
    "@toolcog/node/loader": "workspace:*",
    "@toolcog/node/silence": "workspace:*",
    "@toolcog/node/cli": "workspace:*",
    "eslint": "^9.6",
    "prettier": "^3.3",
    "rimraf": "^5.0",
    "rollup": "^4.18",
    "tslib": "^2.6",
    "typescript": "^5.4"
  }
}
