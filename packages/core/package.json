{
  "name": "@toolcog/core",
  "version": "0.0.1",
  "description": "Toolcog core",
  "type": "module",
  "types": "./dist/lib.d.ts",
  "main": "./dist/lib.js",
  "scripts": {
    "dev": "rollup --config --watch --no-watch.clearScreen",
    "build": "rollup --config",
    "check": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --check src/",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo dist",
    "prepack": "toolcog-config prepack",
    "postpack": "toolcog-config postpack"
  },
  "files": [
    "dist/"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    }
  },
  "peerDependencies": {
    "@toolcog/runtime": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@toolcog/runtime": {
      "optional": true
    }
  },
  "dependencies": {
    "@toolcog/util/async": "workspace:*",
    "@toolcog/util/schema": "workspace:*"
  },
  "devDependencies": {
    "@toolcog/config": "workspace:*",
    "eslint": "^9.6",
    "prettier": "^3.3",
    "rimraf": "^5.0",
    "rollup": "^4.18",
    "tslib": "^2.6",
    "typescript": "^5.4"
  }
}
