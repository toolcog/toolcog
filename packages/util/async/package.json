{
  "name": "@toolcog/util/async",
  "type": "module",
  "types": "./dist/lib.d.ts",
  "main": "./dist/lib.js",
  "scripts": {
    "dev": "rollup --config --watch --no-watch.clearScreen",
    "build": "rollup --config",
    "check": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --check src/",
    "test": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo dist"
  },
  "sideEffects": false,
  "imports": {
    "#scope": {
      "node": "./src/scope.node.ts",
      "default": "./src/scope.polyfill.ts"
    }
  },
  "exports": {
    ".": {
      "node": {
        "types": "./dist/lib.node.d.ts",
        "import": "./dist/lib.node.js",
        "require": "./dist/lib.node.cjs"
      },
      "bun": {
        "types": "./dist/lib.node.d.ts",
        "import": "./dist/lib.node.js",
        "require": "./dist/lib.node.cjs"
      },
      "deno": {
        "types": "./dist/lib.node.d.ts",
        "import": "./dist/lib.node.js",
        "require": "./dist/lib.node.cjs"
      },
      "workerd": {
        "types": "./dist/lib.node.d.ts",
        "import": "./dist/lib.node.js",
        "require": "./dist/lib.node.cjs"
      },
      "default": {
        "types": "./dist/lib.polyfill.d.ts",
        "import": "./dist/lib.polyfill.js",
        "require": "./dist/lib.polyfill.cjs"
      }
    }
  },
  "devDependencies": {
    "@toolcog/config": "workspace:*",
    "eslint": "catalog:build",
    "prettier": "catalog:build",
    "rimraf": "catalog:build",
    "rollup": "catalog:build",
    "tslib": "catalog:build",
    "typescript": "catalog:build"
  }
}
