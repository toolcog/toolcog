{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "declaration": true,
    "module": "nodenext",
    "newLine": "lf",
    "noEmit": false,
    "outDir": "dist",
    "plugins": [{ "transform": "@toolcog/compiler" }],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["node", "@toolcog/anthropic", "@toolcog/openai"],
    "verbatimModuleSyntax": true
  }
}
