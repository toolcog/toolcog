{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "module": "nodenext",
    "newLine": "lf",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "outDir": "${configDir}/dist",
    "paths": {
      "@toolcog/compiler": ["./packages/framework/compiler/src/lib.ts"],
      "@toolcog/compiler/cli": ["./packages/framework/compiler/src/cli/mod.ts"],
      "@toolcog/core": ["./packages/framework/core/src/lib.ts"],
      "@toolcog/repl": ["./packages/framework/repl/src/lib.ts"],
      "@toolcog/runtime": ["./packages/framework/runtime/src/lib.ts"],
      "@toolcog/util": ["./packages/framework/util/src/lib.ts"],
      "@toolcog/util/json": ["./packages/framework/util/src/json/mod.ts"],
      "@toolcog/util/cache": ["./packages/framework/util/src/cache/mod.ts"],
      "@toolcog/util/queue": ["./packages/framework/util/src/queue/mod.ts"],
      "@toolcog/util/emit": ["./packages/framework/util/src/emit/mod.ts"],
      "@toolcog/util/task": ["./packages/framework/util/src/task/mod.ts"],
      "@toolcog/util/async": ["./packages/framework/util/src/async/mod.ts"],
      "@toolcog/util/timer": ["./packages/framework/util/src/timer/mod.ts"],
      "@toolcog/util/tty": ["./packages/framework/util/src/tty/mod.ts"],
      "@toolcog/util/tui": ["./packages/framework/util/src/tui/mod.ts"],
      "@toolcog/util/nlp": ["./packages/framework/util/src/nlp/mod.ts"],
      "@toolcog/util/graphql": ["./packages/framework/util/src/graphql/mod.ts"],
      "@toolcog/anthropic": ["./packages/plugins/anthropic/src/lib.ts"],
      "@toolcog/openai": ["./packages/plugins/openai/src/lib.ts"],
      "@toolcog/node": ["./packages/adapters/node/src/lib.ts"],
      "@toolcog/node/quiet": ["./packages/adapters/node/src/quiet/mod.ts"],
      "@toolcog/node/loader": ["./packages/adapters/node/src/loader/mod.ts"],
      "@toolcog/node/register": [
        "./packages/adapters/node/src/register/mod.ts"
      ],
      "@toolcog/node/installer": [
        "./packages/adapters/node/src/installer/mod.ts"
      ],
      "toolcog": ["./packages/toolcog/src/lib.ts"]
    },
    "rewriteRelativeImportExtensions": true,
    "rootDir": "${configDir}/src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "tsBuildInfoFile": "${configDir}/dist/tsconfig.tsbuildInfo",
    "types": ["node", "ts-expose-internals"],
    "verbatimModuleSyntax": true
  }
}
