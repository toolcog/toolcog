{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": true,
    "module": "nodenext",
    "outDir": "dist",
    "plugins": [
      {
        "transform": "@toolcog/compiler",
        "moduleId": false
      }
    ],
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  }
}
